<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="epugaT2.Views.FrmCalificacion"
             Title="FrmCalificacion"
             BackgroundColor="#E0E0E0">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

                <!-- Título principal -->
                <Label 
                    Text="Tarea Semana 3: Formulario Calificaciones"
                    TextColor="#333333"
                    FontSize="24"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>

                <!-- PARCIAL 1 -->
                <Frame 
                    CornerRadius="10" 
                    Padding="15" 
                    BackgroundColor="#f0f0f0" 
                    HasShadow="True">
                    
                    <VerticalStackLayout Spacing="10">

                        <Label 
                            Text="PARCIAL 1"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#333333"/>

                        <Grid RowSpacing="10" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Label 
                                Text="Nombre" 
                                TextColor="#333333"
                                Grid.Row="0" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Picker x:Name="pckNombres" 
                                    Title="Seleccione un nombre"
                                    Grid.Row="0" 
                                    Grid.Column="1" 
                                    TextColor="#333333">
                                <Picker.Items>
                                    <x:String>EDUARDO PUGA</x:String>
                                    <x:String>JUANITO PEREZ</x:String>
                                    <x:String>PEPE LUCHO</x:String>
                                </Picker.Items>
                            </Picker>

                            <Label 
                                Text="Nota Seguimiento" 
                                TextColor="#333333"
                                Grid.Row="1" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Entry 
                                x:Name="txtNotaSeguimiento1" 
                                TextColor="#333333"
                                Grid.Row="1" 
                                Grid.Column="1" 
                                Placeholder="Ingrese nota seguimiento" 
                                Keyboard="Numeric"/>

                            <Label 
                                Text="Nota Examen" 
                                TextColor="#333333"
                                Grid.Row="2" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Entry 
                                x:Name="txtExamen1" 
                                TextColor="#333333"
                                Grid.Row="2" 
                                Grid.Column="1" 
                                Placeholder="Ingresa nota examen" 
                                Keyboard="Numeric"/>

                            <Label 
                                Text="Nota Parcial 1" 
                                TextColor="#333333"
                                Grid.Row="3" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Label 
                                x:Name="lblCalculoParcial1" 
                                Grid.Row="3" 
                                Grid.Column="1" 
                                TextColor="#333333"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>


                <!-- PARCIAL 2 -->
                <Frame CornerRadius="10" Padding="15" BackgroundColor="#f0f0f0" HasShadow="True">
                    <VerticalStackLayout Spacing="10">

                        <Label 
                            Text="PARCIAL 2"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#333333"/>

                        <Grid RowSpacing="10" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Label 
                                Text="Nota Seguimiento" 
                                TextColor="#333333"
                                Grid.Row="0" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Entry 
                                x:Name="txtNotaSeguimiento2" 
                                TextColor="#333333"
                                Grid.Row="0" 
                                Grid.Column="1" 
                                Placeholder="Ingrese nota seguimiento" 
                                Keyboard="Numeric"/>

                            <Label 
                                Text="Nota Examen" 
                                TextColor="#333333"
                                Grid.Row="1" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Entry 
                                x:Name="txtExamen2" 
                                TextColor="#333333"
                                Grid.Row="1" 
                                Grid.Column="1" 
                                Placeholder="Ingresa nota examen" 
                                Keyboard="Numeric"/>

                            <Label 
                                Text="Nota Parcial 2" 
                                TextColor="#333333"
                                Grid.Row="2" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Label 
                                x:Name="lblCalculoParcial2" 
                                Grid.Row="2" 
                                Grid.Column="1" 
                                TextColor="#333333"/>

                            <Label 
                                Text="Fecha" 
                                TextColor="#333333"
                                Grid.Row="3" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <DatePicker 
                                x:Name="dtaFecha" 
                                TextColor="#333333"
                                Grid.Row="3" 
                                Grid.Column="1" 
                                Format="dd/MM/yyyy"/>

                            <Label 
                                Text="Nota Final" 
                                TextColor="#333333"
                                Grid.Row="4" 
                                Grid.Column="0" 
                                VerticalOptions="Center"/>
                            
                            <Label 
                                x:Name="lblCalculoNotaFinal" 
                                Grid.Row="4" 
                                Grid.Column="1" 
                                TextColor="#333333"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botón calcular -->
                <Button 
                    x:Name="btnCalcularNotas"
                    Text="Calcular Notas"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="50"
                    Clicked="btnCalcularNotas_Clicked"/>

            </VerticalStackLayout>
        </ScrollView>

</ContentPage>